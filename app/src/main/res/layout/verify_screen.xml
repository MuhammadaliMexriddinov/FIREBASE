<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abel"
        android:text="Kodni Tasdiqlash"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_verify"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Shu Raqamga Kod Ketdi +998 90 000 90 90"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.poovam.pinedittextfield.SquarePinField
        android:id="@+id/otp_text"
        android:layout_width="300dp"
        android:layout_height="82dp"
        android:layout_marginTop="50dp"
        app:isCustomBackground="false"
        app:isCursorEnabled="true"
        app:highlightType="allFields"

        app:highlightColor="@color/black"
        android:inputType="number"
        android:textIsSelectable="true"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:distanceInBetween="4dp"
        app:fieldBgColor="@color/disable_button_color"
        app:fieldColor="@color/white"
        app:fillerRadius="12dp"


        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_verify"
        app:lineThickness="1dp"
        app:noOfFields="6" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify_button"

        android:layout_width="0dp"
        android:enabled="false"

        android:layout_height="55dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/abel"
        android:text="Kodni Tasdiqlash"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>